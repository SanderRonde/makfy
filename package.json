{
  "name": "makfy",
  "version": "1.4.0",
  "description": "makfy - npm scripts on steroids!",
  "main": "dist/lib/index.js",
  "typings": "dist/lib/index.d.ts",
  "bin": {
    "makfy": "dist/bin/cli.js"
  },
  "scripts": {
    "build": "tsc -p .",
    "clean": "rimraf ./dist",
    "prepublishOnly": "yarn clean && yarn build"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xaviergonz/makfy.git"
  },
  "author": "Javier Gonzalez Garces <xaviergonz@gmail.com>",
  "keywords": [
    "build",
    "system",
    "make",
    "tool",
    "asset",
    "pipeline"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xaviergonz/makfy/issues"
  },
  "homepage": "https://github.com/xaviergonz/makfy#readme",
  "devDependencies": {
    "@types/node": "^10.9.4",
    "@types/strip-ansi": "^3.0.0",
    "@types/tmp": "0.0.33",
    "@types/yargs": "^11.1.1",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.1",
    "tslint": "^5.5.0",
    "tslint-config-prettier": "^1.15.0"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "glob": "^7.1.2",
    "jsonschema": "^1.1.1",
    "pretty-hrtime": "^1.0.3",
    "strip-ansi": "^4.0.0",
    "tmp": "^0.0.33",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.3",
    "yargs": "^12.0.2"
  },
  "yargs": {
    "short-option-groups": false,
    "camel-case-expansion": false,
    "dot-notation": false,
    "parse-numbers": false,
    "boolean-negation": false,
    "duplicate-arguments-array": false,
    "flatten-duplicate-arrays": false,
    "populate": false
  }
}
